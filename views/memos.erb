<% content_for :header_button do %>
  <div class="button">
    <a class="button__link" href="/memos/new">追加</a>
  </div>
<% end %>
<section class="memo-list">
  <% if @memos.empty? %>
    <p class="memo-list__empty-message">メモを追加してください。</p>
  <% end %>
  <ul class="memo-list__items">
    <% @memos.each do |memo| %>
      <li class="memo-list__item">
        <a href="/memos/<%= h memo[:id] %>" class="memo-list__link"><%= h memo[:title] %></a>
      </li>
    <% end %>
  </ul>
</section>
